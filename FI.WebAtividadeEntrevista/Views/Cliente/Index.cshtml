
@{
    ViewBag.Title = "Clientes";
}
@section scripts{
    <script>
        var urlAlteracao = '@Url.Action("Alterar", "Cliente", new { area = "" })';
        var urlClienteList = '@Url.Action("ClienteList", "Cliente", new { area = "" })';

        $(document).ready(function () {
            $("#Telefone").inputmask("mask", { "mask": "(99) 99999-9999" });
            $("#CPF").inputmask("mask", { "mask": "999.999.999-99" }, { reverse: true });
            $("#CEP").inputmask("mask", { "mask": "99999-999" });
        });
    </script>
    @Scripts.Render("~/bundles/listClientes")
    @Scripts.Render("~/bundles/inputmask")
}
<h2>@Html.Raw(ViewBag.Title)</h2>
@Html.ActionLink("Novo Cliente", "Incluir", "Cliente", new { }, new { @class = "btn btn-sm btn-primary pull-right" })
<table id="gridClientes" class="table"></table>